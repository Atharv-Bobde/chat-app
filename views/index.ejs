</head>

<!--Flash error Messages-->
<body>
  <%if(flash.length>0){%>    
    <div class="alert alert-danger" role="alert">
      <%=flash%>
    </div>
  <%}%>

<!--Register form start-->
<div class="container-fluid">
  <div class="row justify-content-center" style="margin-top:10vh;">
      <div class="col-sm-6 col-md-4">
        <form action="/register" class="shadow-lg p-4 text-white bg-dark" method="post" style="border-radius: 25px;">
          <legend class="border-bottom mb-4 font-weight-bold">Register</legend>
            <div class="form-group">
              <i class="fas fa-user"></i><label for="usernameR" class="pl-2 font-weight-bold">Username</label>
              <input type="text" class="form-control" placeholder="Username" id="usernameR" name="username" required>
            </div>
            <div class="form-group">
              <i class="fas fa-key"></i><label for="passwordR" class="pl-2 font-weight-bold">Password</label>
              <input type="password" class="form-control" id="passwordR" placeholder="Password" name="password" required>
            </div>
            <button type="submit" class="btn btn-outline-success mt-3 btn-block shadow-sm font-weight-bold">Register</button>
        </form>
      </div>
  </div>
</div>
<!--Register form end-->

<!--Login form start-->
<div class="container-fluid">
<div class="row justify-content-center" style="margin-top:10vh;margin-bottom:5vh;">
    <div class="col-sm-6 col-md-4">
      <form action="/login" class="shadow-lg p-4 text-white bg-dark" method="post" style="border-radius: 25px;">
        <legend class="border-bottom mb-4 font-weight-bold">Login</legend>
          <div class="form-group">
            <i class="fas fa-user"></i><label for="username" class="pl-2 font-weight-bold">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Username" name="username" required>
          </div>
          <div class="form-group">
            <i class="fas fa-key"></i><label for="inputPassword" class="pl-2 font-weight-bold">Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password" required>
          </div>
          <button type="submit" class="btn btn-outline-success mt-3 btn-block shadow-sm font-weight-bold">Login</button>
      </form>
    </div>
</div>
</div>
<!--Login form end-->

